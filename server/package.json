{
    "name": "@aes_sedai/delta-gateway",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "nodemon src/server.ts",
        "generate": "env-cmd -f ../.env graphql-codegen --config codegen-hasura.yml"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            "node_modules/**/node_modules"
        ],
        "execMap": {
            "ts": "node --experimental-specifier-resolution=node --loader ts-node/esm"
        },
        "ext": "ts,js,json"
    },
    "eslintConfig": {
        "root": true,
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:import/typescript",
            "prettier"
        ],
        "rules": {
            "@typescript-eslint/no-dynamic-delete": "off",
            "@typescript-eslint/no-non-null-assertion": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/restrict-template-expressions": "off",
            "no-void": "off"
        }
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.3.1",
        "@graphql-codegen/introspection": "^2.1.0",
        "@graphql-codegen/schema-ast": "^2.2.0",
        "@graphql-codegen/typescript": "^2.2.2",
        "@graphql-codegen/typescript-graphql-request": "^4.1.4",
        "@graphql-codegen/typescript-operations": "^2.1.6",
        "@graphql-codegen/typescript-resolvers": "^2.3.0",
        "@swc/core": "^1.2.129",
        "@types/lodash": "^4.14.178",
        "@types/node": "^17.0.8",
        "@types/ws": "^8.2.2",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "env-cmd": "^10.1.0",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "prettier-plugin-organize-imports": "^2.3.4",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "@envelop/core": "^1.7.1",
        "@graphql-tools/load-files": "^6.5.0",
        "@graphql-tools/merge": "^8.1.2",
        "@graphql-tools/schema": "^8.2.0",
        "@graphql-tools/wrap": "^8.1.1",
        "cross-undici-fetch": "^0.0.20",
        "envalid": "^7.2.2",
        "fastify": "^3.25.3",
        "fastify-websocket": "^4.0.0",
        "graphql-helix": "^1.11.0",
        "graphql-ws": "^5.5.5",
        "hasha": "^5.2.2",
        "jsondiffpatch": "^0.4.1",
        "lodash": "^4.17.21",
        "undici": "^4.12.2",
        "ws": "^8.4.2"
    }
}
